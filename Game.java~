public class Game
{
  private int lives;
  private boolean winner;
  private int wave;
  private int level;
  private String title;
  private String map;
  
  public Game(int mode)
  {
    title = "Last Stand: "
    if (mode == 0)
    {
      lives = 200;
      title += "Easy";
    }
    else if (mode == 1)
    {
      lives = 150;
      title += "Hard";
    }
    else
    {
      lives = 100;
      title += "Lunatic";
    }
  }
}